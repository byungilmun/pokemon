<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- splash -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- recycler item text style. -->
    <style name="recyclerItemTextStyle">
        <item name="android:textDirection">locale</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- details info text style -->
    <style name="detailsInfoTextStyle">
        <item name="android:textDirection">locale</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- detail pop animation style -->
    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/open_dialog</item>
        <item name="android:windowExitAnimation">@anim/close_dialog</item>
    </style>
</resources>